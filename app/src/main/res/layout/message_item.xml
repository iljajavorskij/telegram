<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/appMargin"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/singl_chat_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/bg_user"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/chat_item_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="privet ilja javorskij"
            android:gravity="end"
            android:textColor="@color/black"
            android:padding="@dimen/appPadding"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/chat_item_message_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="21:15"
            android:gravity="end"
            android:layout_marginEnd="14dp"
            android:textColor="@color/md_grey_700"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/chat_item_message"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/singl_chat_receiver_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="100dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/bg_rec_user"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/chat_received_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="privet ilja javorskij"
            android:gravity="end"
            android:textColor="@color/black"
            android:padding="@dimen/appPadding"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/chat_received_message_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="21:15"
            android:gravity="end"
            android:layout_marginEnd="14dp"
            android:textColor="@color/md_grey_700"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/chat_received_message"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>